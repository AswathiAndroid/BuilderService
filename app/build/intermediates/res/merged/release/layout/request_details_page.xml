<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	android:gravity="center"
    android:background="@drawable/bg_service">
    <include
        android:id="@+id/main_bar"
        layout="@layout/toolbar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/scrollDetail">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		android:weightSum="1"
		android:padding="20dp"
		android:gravity="center"
		android:background="@drawable/transprnt_bg">

		<TextView
			android:id="@+id/serviceName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:textColor="#ffffff"
			android:textSize="20sp"
			android:textStyle="bold"
			android:layout_marginTop="10dp"/>

		<View
			android:layout_marginTop="10dp"
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:gravity="center"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/dateImg"
				android:layout_width="wrap_content"
				android:layout_height="25dp"
				android:padding="5dp"
				android:src="@drawable/detail2" />

			<EditText
				android:id="@+id/dt"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:cursorVisible="false"
				android:enabled="false"
				android:hint="10-11-2018"
				android:textColor="#fff"
				android:textCursorDrawable="@drawable/white_cursor"
				android:textColorHint="#A9A9A9"
				android:textSize="12dp" />

			<ImageView
				android:id="@+id/dateImgaa"
				android:layout_width="25dp"
				android:layout_height="match_parent"
				android:padding="5dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/detail3" />

			<EditText
				android:id="@+id/tmFrom"
				android:layout_width="wrap_content"
				android:layout_height="50dp"
				android:layout_marginLeft="5dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:cursorVisible="false"
				android:enabled="false"
				android:hint="03.00pm"
				android:textColor="#fff"
				android:textCursorDrawable="@drawable/white_cursor"
				android:textColorHint="#A9A9A9"
				android:textSize="12dp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="To"
				android:textColor="#D41031" />

			<EditText
				android:id="@+id/tmTo"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="5dp"
				android:layout_weight="1"
				android:background="@android:color/transparent"
				android:cursorVisible="false"
				android:enabled="false"
				android:hint="06.00pm"
				android:textColor="#fff"
				android:textCursorDrawable="@drawable/white_cursor"
				android:textColorHint="#A9A9A9"
				android:textSize="12dp" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="52dp"
			android:layout_marginTop="15dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:contentDescription="message icon"
				android:padding="4dp"
				android:scaleType="fitStart"
				android:src="@drawable/detail4" />

			<EditText
				android:id="@+id/msg"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="0.99"
				android:background="@android:color/transparent"
				android:enabled="false"
				android:gravity="top"
				android:hint="Description"
				android:inputType="textMultiLine"
				android:textColor="#fff"
				android:textCursorDrawable="@drawable/white_cursor"
				android:textColorHint="#A9A9A9"
				android:textSize="12dp" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />

		<Spinner
			android:id="@+id/status"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/spinner_bg"
			android:popupTheme="@style/PopupMenu"
			android:spinnerMode="dialog"
			android:padding="10dp" />

		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />

		<EditText
        android:id="@+id/serviceMan"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="0.99"
			android:background="@android:color/transparent"
			android:enabled="false"
			android:hint="Service Person"
			android:inputType="textMultiLine"
			android:textColor="#fff"
			android:paddingTop="5dp"
			android:textCursorDrawable="@drawable/white_cursor"
			android:textColorHint="#A9A9A9"
			android:textSize="12dp" />
		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />
		<EditText
			android:id="@+id/servicePhone"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="0.99"
			android:background="@android:color/transparent"
			android:enabled="false"
			android:hint="Service Person"
			android:inputType="textMultiLine"
			android:textColor="#fff"
			android:paddingTop="5dp"
			android:textCursorDrawable="@drawable/white_cursor"
			android:textColorHint="#A9A9A9"
			android:textSize="12dp" />
		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />
		<EditText
			android:id="@+id/serviceDate"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="0.99"
			android:background="@android:color/transparent"
			android:enabled="false"
			android:hint="Service Person"
			android:inputType="textMultiLine"
			android:textColor="#fff"
			android:paddingTop="5dp"
			android:textCursorDrawable="@drawable/white_cursor"
			android:textColorHint="#A9A9A9"
			android:textSize="12dp" />
		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Rating Now"
				android:textColor="#D41031"
				android:textSize="15dp" />


			<!--<RatingBar
				style="?android:attr/ratingBarStyleSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:isIndicator="false"
				android:numStars="5"
				android:stepSize="0.5" /> -->

			<com.iarcuschin.simpleratingbar.SimpleRatingBar
				android:id="@+id/ratingBar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srb_borderColor="#ffffff"
				app:srb_fillColor="#ffffff"
				app:srb_numberOfStars="5"
				app:srb_stepSize="0.5"
				app:srb_starSize="15dp"
				app:srb_starBorderWidth="0.9"
				app:srb_starCornerRadius="0.5"
				android:layout_marginTop="10dp" />
			<View
				android:layout_marginTop="10dp"
				android:layout_width="match_parent"
				android:layout_height="0.3dp"
				android:background="#1Affffff" />
		</LinearLayout>




		<EditText
			android:id="@+id/feedBack"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="15dp"
			android:background="@android:color/transparent"
			android:gravity="start"
			android:padding="5dp"
			android:hint="Write Review"
			android:inputType="textMultiLine"
			android:textColor="#fff"
			android:textCursorDrawable="@drawable/white_cursor"
			android:textColorHint="#A9A9A9"
			android:textSize="12dp"
			android:layout_weight="0.12" />
		<View
			android:layout_width="match_parent"
			android:layout_height="0.3dp"
			android:background="#1Affffff" />


		<Button
			android:id="@+id/submt"
			android:layout_width="140dp"
			android:layout_height="36dp"
			android:layout_marginTop="35dp"
			android:layout_marginBottom="5dp"
			android:gravity="center"
			android:textColor="#ffffff"
			android:background="#D41031"
			android:textSize="13dp"
			android:text="Submit"/>
	</LinearLayout>
</ScrollView>
</LinearLayout>